circleWidth = 80%
padding = 90%

figure.circle
  circle-container()

  .avatar
    circle(circleWidth)
    box-shadow 0 2px rgba(255,255,255,.51),
      inset 0 2px rgba(1,0,0,.05),
      inset 0 0 5px rgba(0,0,0,.1)

    &:hover
      box-shadow 0 4px rgba(255,255,255,.51),
        inset 0 4px rgba(1,0,0,.05),
        inset 0 0 10px rgba(0,0,0,.1)

    .photograph
      inner-circle(padding)
      box-shadow 1px 1px rgba(0,0,0,.25)

      &:hover
        box-shadow 2px 2px rgba(0,0,0,.25)

    &.leads
      background-color viking
      background-image linear-gradient(bottom, rgba(26,26,26,.2), rgba(255,255,255,.2))

    &.sampling
      background-color kelly-green
      background-image linear-gradient(bottom, rgba(26,26,26,.22), rgba(255,255,255,.22))