// Clearfix - http://nicolasgallagher.com/micro-clearfix-hack
cf()
    *zoom 1
    &:before, &:after
        content ""
        display table
    &:after
        clear both

// Buttons
btn(bg_color = #eee, radius = 10px, style = flat)
    bs()
    display inline-block
    background bg_color
    border-radius(radius)
    cursor pointer
    text-align center
    text-decoration none
    if dark(bg_color)
        box-shadow inset 0 1px 0 rgba(255,255,255,.2)
        border 1px solid saturate(darken(bg_color, 15%), 15%)
        color saturate(lighten(bg_color, 85%), 5%)
        text-shadow 0 1px 0 saturate(darken(bg_color, 20%), 30%)
    if light(bg_color)
        box-shadow inset 0 1px 0 rgba(255,255,255,.5)
        border 1px solid saturate(darken(bg_color, 30%), 20%)
        color saturate(darken(bg_color, 60%), 10%)
        text-shadow 0 1px 0 saturate(lighten(bg_color, 55%), 90%)
    if style is flat
        background linear-gradient(top, lighten(bg_color, 10%) 10%, darken(bg_color, 10%) 90%)
    if style is glossy
        background linear-gradient(top, lighten(bg_color, 8%) 50%, darken(bg_color, 8%) 50%)
    &:hover
        opacity(.9)
        if dark(bg_color)
            color lighten(bg_color, 90%)
        if light(bg_color)
            color darken(bg_color, 80%)

// Shadow
shadow(w = 50%, args...)
    position relative
    &:before, &:after
        content ''
        position absolute
        z-index -1
    &:before
        display block !important
        bottom 0
        left 0
        right 0
        margin auto
        border-radius 999px
        width w
        height 0
        box-shadow(0 -4em 4em 4em rgba(0,0,0,.3))
        if (args)
            box-shadow(args)
            border-bottom 10px solid blue

// ChromeFrame for IE6, 7, 8 
.chromeframe
    width 100%
    background #fff
    background linear-gradient(top, #fff, #eee)
    border-bottom 1px solid #ddd
    box-shadow inset 0 -1px 0 #fff
    text-shadow 0 1px 0 #fff
    p
        center()
        padding 30px 0
        text-align center
        margin-bottom 0
        a
            color #3a95fb